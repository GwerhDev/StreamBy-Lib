{
  "compilerOptions": {
    "target": "ES6",
    "module": "commonjs",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "outDir": "./dist",
    "rootDir": "./lib"
  },
  "include": ["lib/**/*.ts", "lib/tests/**/*.ts"],
  "exclude": ["node_modules"]
}